class Solution:
    def maxProduct(self, root):
        MOD = 10**9 + 7
        
        def totalSum(node):
            if not node: return 0
            return node.val + totalSum(node.left) + totalSum(node.right)
        
        total = totalSum(root)
        self.ans = 0
        
        def dfs(node):
            if not node: return 0
            s = node.val + dfs(node.left) + dfs(node.right)
            self.ans = max(self.ans, s * (total - s))
            return s
        
        dfs(root)
        return self.ans % MOD

        
