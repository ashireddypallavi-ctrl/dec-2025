class Solution:
    def convert(self, s, n):
        if n == 1 or n >= len(s):
            return s
        rows = [''] * n
        i, d = 0, 1
        for ch in s:
            rows[i] += ch
            if i == 0:
                d = 1
            elif i == n - 1:
                d = -1
            i += d
        return ''.join(rows)
